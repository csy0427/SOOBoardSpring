<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 다른 mapper와 중복되지 않도록 네임스페이스 기재 -->
<mapper namespace="reply">

    <select id="listReply" resultType="com.spring.Reply.dto.ReplyVO">
        SELECT *
        FROM reply
    </select>

    <select id="insertReply" parameterType="com.spring.Reply.dto.ReplyVO">
        INSERT INTO reply
        (rno, boardnumber, replytext, userid, secretreply, replyer)
        VALUES (#{rno}, #{boardnumber}, #{replytext}, #{userid}, #{secretreply}, #{replyer})
    </select>

    <select id="increaseBoardRecnt" parameterType="String">
        UPDATE board
        SET rent = recnt + 1
        WHERE boardnumber = #{boardnumber}
    </select>

    <delete id="deleteReply" parameterType="String">
        DELETE FROM reply WHERE rno= #{rno}
    </delete>

    <update id="updateReply" parameterType="com.spring.Reply.dto.ReplyVO">
        UPDATE reply
        SET replytext = #{replytext}
        where rno = #{rno}
    </update>

    <select id="countReply" parameterType="String" resultType="int">
        SELECT COUNT(rno)
        FROM reply
        WHERE boardnumber = #{boardnumber}
    </select>

    <select id="detailReply" resultType="com.spring.Reply.dto.ReplyVO">
        SELECT *  FROM reply
        WHERE rno = #{rno}
    </select>

    <select id="listAll" parameterType="hashmap" resultType="com.spring.Reply.dto.ReplyVO">
        SELECT * FROM reply LIMIT #{PAGE_SCALE} OFFSET #{start}-1
    </select>


</mapper>
